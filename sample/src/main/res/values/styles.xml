<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textViewStyle">@style/CommonTextView</item>
        <item name="buttonStyle">@style/CommonButton</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="CommonTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CommonButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/common_button_size</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonTransparentBorder" parent="CommonButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/button_transparent_custom</item>
        <item name="android:textSize">@dimen/common_button_size</item>
    </style>
    
    <style name="PikassaFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@android:color/black</item>
        <item name="boxBackgroundColor">@color/colorBackground</item>
        <item name="boxCornerRadiusTopStart">@dimen/rounded_corners</item>
        <item name="boxCornerRadiusTopEnd">@dimen/rounded_corners</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="hintTextColor">@color/colorTextSecondary</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeColor">@color/edittext_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PikassaEditText" parent="Widget.AppCompat.EditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="singleLine">true</item>
    </style>

</resources>